{{ "s-featured-products-popup.css" |  asset_url | stylesheet_tag }}
<script src="{{ "s-featured-products-popup.js" |  asset_url }}" defer></script>

<s-featured-products-popup class="s-featured-products-popup">
<h1>Featured products popup</h1>
</s-featured-products-popup>

{% schema %}
  {
    "name": "Featured products popup",
    "settings": [
      {
        "type": "header",
        "content": "Popup settings"
      },
      {
        "type": "checkbox",
        "id": "is_enabled",
        "label": "Enable popup",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Popup image"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "range",
        "id": "delay",
        "min": 1,
        "max": 10,
        "step": 1,
        "unit": "s",
        "label": "Popup delay",
        "default": 5
      },
      {
        "type": "checkbox",
        "id": "show_only_one",
        "label": "Show only one per customer",
        "default": false
      }
    ],
    "blocks": [
      {
        "name": "Product",
        "type": "product",
        "settings": [
          {
            "type": "header",
            "content": "Product"
          },
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ]
  }
{% endschema %}